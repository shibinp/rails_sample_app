<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <span class="align">
       <%= f.label :name %>
      </span>
      <%= f.text_field :name %>
      <br/>
      <span class="align">
      <%= f.label :email %>
      </span>
      <%= f.email_field :email %>
      <br/>
      <span class="align">
      <%= f.label :password %>
      </span>
      <%= f.password_field :password %>
      <br/>
      <span class="align">
      <%= f.label :password_confirmation, "Confirmation" %>
      </span>
      <%= f.password_field :password_confirmation %>
      <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
      </br>
    <% end %>
  </div>
</div>
